<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AndroidGPSTrackingActivity" >

    <Button
        android:id="@+id/btnShowLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Start" />

    <Switch
        android:id="@+id/switchSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:text="Send SMS" />

    <EditText
        android:id="@+id/textMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/switchSendSMS"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/textWaitPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textMobileNumber"
        android:layout_alignRight="@+id/textMobileNumber"
        android:layout_below="@+id/textMobileNumber"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Wait period in minutes"
        android:inputType="number" />

    <EditText
        android:id="@+id/textIterations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textWaitPeriod"
        android:layout_below="@+id/textWaitPeriod"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Iterations"
        android:inputType="number" />

</RelativeLayout>